<!-- views/leave-request.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Leave Request Form</title>
</head>
<body>
<div class="container">
    <h1>Leave Request Form</h1>
    <form action="/leaves/request" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= leaveData?.name %>" required>
        </div>
        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" value="<%= leaveData?.startDate %>" required>
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" value="<%= leaveData?.endDate %>" required>
        </div>
        <div class="form-group">
            <label for="isPaidLeave">Paid Leave</label>
            <input type="checkbox" id="isPaidLeave" name="isPaidLeave">
        </div>
        <div class="form-group">
            <label for="employeeId">Employee ID</label>
            <input type="text" id="employeeId" name="employeeId" class="form-control" value="<%= leaveData?.employeeId %>" required>
        </div>
        <div class="form-group">
            <label for="justification">Justification</label>
            <textarea id="justification" name="justification" class="form-control" rows="4" required><%= leaveData?.justification %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <% if (error) { %>
        <div class="alert alert-danger mt-3" role="alert">
            <%= error %>
        </div>
    <% } %>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
